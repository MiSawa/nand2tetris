/** 
 * Multiplexor:
 * out = a if sel == 0
 *       b otherwise
 */

CHIP Mux {
    IN a, b, sel;
    OUT out;

    PARTS:
    Not(in=sel, out=notsel);
    Nand(a=notsel, b=a, out=notaifa);
    Nand(a=   sel, b=b, out=notbifb);
    Nand(a=notaifa, b=notbifb, out=out);
}
